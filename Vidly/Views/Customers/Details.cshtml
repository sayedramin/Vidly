@model Vidly.Models.Customers
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    @{
        <li>Membership Type: @Model.MembershipType.Type</li>
        if (Model.BirthDate.HasValue)
        {
            <li>Birthdate: @Model.BirthDate.GetValueOrDefault().ToShortDateString()</li>
        }
    }
</ul>


