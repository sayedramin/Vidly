@model IEnumerable<Vidly.Models.Movies>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@Html.ActionLink("NEW MOVIE", "New", "Movie", new { @class = "btn btn-outline-primary" })

@if (Model != null)
{
    <table class="table table-hover table-bordered">
        <tr>
            <th>Movies</th>
            <th>Genre</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(@item.Name, "Edit", "Movies", new { id = item.Id }, null)
                </td>
                <td>
                    @item.Genre.Genre
                </td>

            </tr>
        }

    </table>
}
else
{
    <p>No movie exists in Database</p>
}